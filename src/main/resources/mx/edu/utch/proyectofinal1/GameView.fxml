<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.utch.proyectofinal1.GameController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Jugador:"/>
            <TextField fx:id="txtNombre" promptText="Tu nombre" prefWidth="180"/>

            <Button fx:id="btnIniciar" text="Iniciar" onAction="#onIniciar"/>
            <Button fx:id="btnRecords" text="Ver rÃ©cords" onAction="#onVerRecords"/>

            <Label text="Nivel:"/>
            <Label fx:id="lblNivel" text="0"/>
            <Label fx:id="lblEstado" text="" style="-fx-font-weight: bold; -fx-text-fill: #444;"/>
        </HBox>
    </top>



    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50"/>
                <RowConstraints percentHeight="50"/>
            </rowConstraints>

            <Button fx:id="btnRojo" onAction="#onColorClick" GridPane.rowIndex="0" GridPane.columnIndex="0"
                    style="-fx-background-color: #e74c3c; -fx-background-radius: 12; -fx-min-width: 160; -fx-min-height: 160;"/>
            <Button fx:id="btnAzul" onAction="#onColorClick" GridPane.rowIndex="0" GridPane.columnIndex="1"
                    style="-fx-background-color: #3498db; -fx-background-radius: 12; -fx-min-width: 160; -fx-min-height: 160;"/>
            <Button fx:id="btnVerde" onAction="#onColorClick" GridPane.rowIndex="1" GridPane.columnIndex="0"
                    style="-fx-background-color: #2ecc71; -fx-background-radius: 12; -fx-min-width: 160; -fx-min-height: 160;"/>
            <Button fx:id="btnAmarillo" onAction="#onColorClick" GridPane.rowIndex="1" GridPane.columnIndex="1"
                    style="-fx-background-color: #f1c40f; -fx-background-radius: 12; -fx-min-width: 160; -fx-min-height: 160;"/>
        </GridPane>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Reiniciar" onAction="#onReiniciar"/>
        </HBox>
    </bottom>
</BorderPane>
